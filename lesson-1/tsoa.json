{
    "entryFile": "src/server.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/api/**/*.controller.ts"
    ],
    "spec": {
        "outputDirectory": "src",
        "specVersion": 3,
        "basePath": "/api"
    },
    "routes": {
        "routesDir": "src/routes"
    },
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    }
}